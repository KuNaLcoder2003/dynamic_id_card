model User {
  id            Int        @id @unique @default(autoincrement())
  first_name    String     @db.VarChar(200)
  last_name     String     @db.VarChar(200)
  aadhar_number String     @unique @db.VarChar(200)
  picture_url   String     @db.VarChar(200)
  token         String     @default("") @db.VarChar(200)
  bankId        String     @default("162") @db.VarChar(200)
  branchId      String     @default("") @db.VarChar(200)
  dynamicIds    DynamicId?
}

model DynamicId {
  id        Int    @id @unique @default(autoincrement())
  dynamicId String @unique @db.VarChar(200)
  user_id   Int    @unique
  userId    User   @relation(fields: [user_id], references: [id])
  qrCode    String @default("")
}
